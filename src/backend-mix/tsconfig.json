{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./../../",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es6", "dom"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noLib": false,
        "noUnusedLocals": true,
        "outDir": "../../node_modules/@notadd/backend-mix",
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2015"
    },
    "include": [
        "*.ts",
        "*.tsx",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "./**/*.spec.ts"
    ]
}
